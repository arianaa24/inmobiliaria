<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <!-- base structure of product.template, common with product.product -->
    <record id="inmobiliaria_product_template_only_form_view" model="ir.ui.view">
        <field name="name">inmobiliaria.product.template.product.form</field>
        <field name="model">product.template</field>
        <field name="priority" eval="8" />
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="nivel"/>
                <field name="metros_cuadrados"/>
            </field>
        </field>
    </record>


    </data>
</odoo>
